@model IEnumerable<AMS_Models.Models.UserRegistration>

@{
    ViewData["Title"] = "showuserdetails";
}

<h1>showuserdetails</h1>

<p>
    <a asp-action="insertuser">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="EditUser" asp-route-Uid="@item.Uid">Edit</a> |
                <a asp-action="UserDetails" asp-route-Uid="@item.Uid">Details</a> |
                <a asp-action="Delete" asp-route-Uid="@item.Uid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
