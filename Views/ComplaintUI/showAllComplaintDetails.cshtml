@model IEnumerable<AMS_Models.Models.Complaint>

@*<p>
    <a asp-action="Create"></a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PidNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PidNavigation.Pid)
            </td>
            <td>
                <a asp-action="EditComplaint" asp-route-Cid="@item.Cid">Edit</a> |
                <a asp-action="ShowComplaintById" asp-route-Cid="@item.Cid">Details</a> |
               @* <a asp-action="Delete" asp-route-id="@item.Cid">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
